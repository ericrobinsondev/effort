{
  "name": "effort",
  "description": "boilerplate for starting express apis",
  "main": "index.js",
  "repository": "git@github.com:drericrobinson/effort.git",
  "author": "Eric Robinson <soyecr+dr@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "NODE_ENV=testing jest --forceExit --detectOpenHandles  --silent --env=jsdom",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "restart": "rimraf dist && yarn build && yarn start",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "client": "cd client && yarn start",
    "client-install": "yarn --cwd client",
    "server": "ndb nodemon --exec yarn restart",
    "heroku-postbuild": "yarn build && cd client && yarn && yarn build"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "cuid": "^2.1.6",
    "date-fns": "^1.30.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.13",
    "mongoose": "^5.4.19",
    "morgan": "^1.9.1",
    "node-sass": "^4.12.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "23.6.0",
    "concurrently": "^4.1.0",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "23.6.0",
    "ndb": "^1.0.43",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.0"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.(css|less|scss)$": "babel-jest"
    },
    "testURL": "http://localhost/",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test-db-setup.js",
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "restoreMocks": true
  }
}
